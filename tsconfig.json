{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "moduleResolution": "node",
        "baseUrl": ".",
        "plugins": [
            {
                "name": "tslint-language-service",
                "disableNoUnusedVariableRule": false
            }
        ]
    }
}